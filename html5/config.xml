<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.omerkel.ucthello" version="0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UCThello</name>
    <description>
        MCTS UCT driven board game (Othello variant).
    </description>
    <author email="Merkel.Oliver@web.de" href="https://github.com/OMerkel">
        Oliver Merkel
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="android-minSdkVersion" value="33" />
        <preference name="android-targetSdkVersion" value="33" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splashscreen.png" />
        <preference name="SplashScreenDelay" value="4000" />
        <preference name="AndroidWindowSplashScreenBackground" value="#eede94" />
        <icon src="www/img/icons/ucthello32.png" density="ldpi" />
        <icon src="www/img/icons/ucthello48.png" density="mdpi" />
        <icon src="www/img/icons/ucthello64.png" density="hdpi" />
        <icon src="www/img/icons/ucthello90.png" density="xhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
